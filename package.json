{
    "name": "xdotool",
    "version": "2.0.3",
    "description": "C++ bindings for Node.js to handle X11 using the full power of libxdo.",
    "main": "./out/index.js",
    "typings": "./out/index.d.ts",
    "scripts": {
        "install": "cmake-js -B Release --prefer-clang --out build/cmake-js compile",
        "build:debug": "cmake-js -B Debug --prefer-clang --out build/cmake-js-debug compile",
        "build:asan": "cmake-js -B Debug --prefer-clang --out build/cmake-js-asan compile --CDCMAKE_CXX_FLAGS='-fsanitize=address -fno-omit-frame-pointer'",
        "test": "ava",
        "memcheck": "node --expose-gc valgrind/memcheck.js",
        "memcheck:quick": "MEMCHECK_ITERATIONS=10 MEMCHECK_VERBOSE=1 node --expose-gc valgrind/memcheck.js",
        "valgrind": "bash valgrind/run-valgrind.sh",
        "valgrind:quick": "bash valgrind/run-valgrind.sh --quick --verbose",
        "valgrind:full": "bash valgrind/run-valgrind.sh --full --track-origins"
    },
    "ava": {
        "nodeArguments": [
            "--import=tsx"
        ]
    },
    "files": [
        "**/*.{cpp,h,c,map,js,d.ts}",
        "**/CMakeLists.txt",
        "!build",
        "!cmake-build-*"
    ],
    "keywords": [
        "x11",
        "xorg",
        "bindings"
    ],
    "author": {
        "email": "victorcqueirozg@gmail.com",
        "name": "Victor Queiroz",
        "url": "https://victorqueiroz.dev"
    },
    "license": "MIT",
    "devDependencies": {
        "@types/node": "^20.19.30",
        "ava": "^6.4.1",
        "tsx": "^4.21.0",
        "typescript": "^5.9.3"
    },
    "dependencies": {
        "bindings": "^1.5.0",
        "cmake-js": "^8.0.0",
        "nan": "^2.25.0",
        "tslib": "2.2.x"
    }
}
